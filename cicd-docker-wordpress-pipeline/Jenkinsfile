pipeline {
    agent any
    
    environment {
        REPO_URL= 'https://github.com/Asaf01/ci'
        CONTAINER_NAME = "wordpress"
        IMAGE_NAME = 'wordpress'
        TAG = "V1.${BUILD_NUMBER}"
        DOCKERHUB_CREDENTIALS = credentials('docker')
    }
 
    stages{
        stage("clone"){
            steps{
                sh 'git clone ${REPO_URL}'
                sh 'pwd'
                sh 'find .'
            }
        
        }
    
        stage('Build Image') {
            steps {
                script {
                    sh "docker build -t wordpress:v1 ."
                }
            }
        }
    
    
    
       
        
       }
        
    }