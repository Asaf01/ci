pipeline {
    agent any
    
    environment {
        REPO_URL= 'https://github.com/Asaf01/ci'
        CONTAINER_NAME = "wordpress"
        IMAGE_NAME = 'wordpress'
        DIR_NAME= 'cicd-docker-wordpress-pipeline'
    }
 
   

    stage('Build Image') {
            steps {
                dir('ci/cicd-docker-wordpress-pipeline') {
                    script {
                       sh 'docker build -t my_image --file ../dockerfile .'
                       sh 'docker images '
       }
               }   
            }
            }
    }