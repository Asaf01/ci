pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/Asaf01/ci'
        IMAGE_NAME = 'wordpress'
        DOCKERFILE_DIR = 'cicd-docker-wordpress-pipeline'
        DOCKERHUB_CREDENTIALS = 'dockerhublogin'  // Updated to match the correct credentials ID
        DOCKERHUB_REPO = 'bendrorasaf/wordpress'
        K8S_REPO_URL = 'https://github.com/Asaf01/WP_PROJECT'
        K8S_FILES_DIR = 'WP_PROJECT/K8S Deployment'
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Checkout the repository
                git branch: 'main', url: "${REPO_URL}"
            }
        }
        
        stage('Determine Version') {
            steps {
                script {
                    // Fetch the latest version from Docker Hub and increment it
                    def latestTag = sh(
                        script: """
                        curl -s https://hub.docker.com/v2/repositories/${DOCKERHUB_REPO}/tags/?page_size=1 | grep -oP '"name":\\s*"v\\K\\d+' | sort -nr | head -n1
                        """,
                        returnStdout: true
                    ).trim()

                    // Increment the version number
                    def versionNumber = latestTag ? latestTag.toInteger() + 1 : 1
                    env.VERSION = "v${versionNumber}"
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                // Build the Docker image
                script {
                    dockerImage = docker.build("${DOCKERHUB_REPO}:${VERSION}", "${DOCKERFILE_DIR}")
                }
            }
        }

        stage('Test Docker Image') {
            steps {
                // Run a container from the image and execute a test command
                script {
                    sh 'echo "Testing the Docker image..."'
                    // Add your actual test commands here
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKERHUB_CREDENTIALS}") {
                        dockerImage.push("${VERSION}")
                        dockerImage.push('latest')  // Optionally push the image with the 'latest' tag
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    // Clone the repository with Kubernetes deployment files
                    git branch: 'main', url: "${K8S_REPO_URL}"

                    // Apply the Kubernetes deployment files
                    sh '''
                    kubectl create -f ${K8S_FILES_DIR}/mysql-pv.yaml
                    kubectl create -f ${K8S_FILES_DIR}/mysql-config.yaml
                    kubectl create -f ${K8S_FILES_DIR}/db-root-cred.yaml
                    kubectl create -f ${K8S_FILES_DIR}/db-cred.yaml
                    kubectl create -f ${K8S_FILES_DIR}/mysql.yaml
                    kubectl create -f ${K8S_FILES_DIR}/wp-configmap.yaml
                    kubectl create -f ${K8S_FILES_DIR}/wordpress.yaml
                    '''
                }
            }
        }

        stage('Delete Workspace') {
            steps {
                // Cleanup workspace
                deleteDir()
            }
        }
    }

    post {
        always {
            // Ensure workspace is cleaned up after the build
            cleanWs()
        }
    }
}
